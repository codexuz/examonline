---
import SkillHeader from "@components/SkillHeader.astro";
const {
  frontmatter: { title, description,author },
} = Astro.props;
---
<html lang="en">
  <head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1" />
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-B2P1J1FSK7"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-B2P1J1FSK7');
</script>
    <style is:global>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

       .feelback-icon svg {
        color:red
   }
    </style>
  </head>
  <body>
    <SkillHeader skillTitle="Blogs"/>
    <main>
      <article class="container mx-auto px-4 prose lg:prose-xl prose-invert">
        <div class="flex flex-col">
          <h1 class="title">{title}</h1>
        <div class="flex items-center">  
          <em>Written by: {author}</em>
           
    </div>
        </div>
        <div class="article-body">
          <hr />
          <slot />
        </div>
      </article>
    </main>
    <div class="footer-container">
    
    </div>
    <style>
      .footer-container{
        height:50px
      }


      html {
        min-height: 100vh;
        height: 100%;
      }
      body {
        height: 100%;
        background-color: #1c1d33;
        color:white
      }
      time {
        display: inline-block;
        margin-top: 10px;
      }
      iframe{
        width: 853px;
        height: 480px;
      }
   @media screen and max-width(660px){
       iframe{
        width: 100%;
        height: 480px;
      }
   }

    </style>
  </body>
</html>
