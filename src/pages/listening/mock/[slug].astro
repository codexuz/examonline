---
import ExamLayout from '../../../layouts/ExamLayout.astro';

const { slug } = Astro.params;

let res = await fetch(`https://xirurgabdukarim.uz/wp-json/wp/v2/listeningmock?slug=${slug}`)
let [post] = await res.json();

// The getStaticPaths() is required for static Astro sites.
// If using SSR, you will not need this function.
export async function getStaticPaths() {
  let data = await fetch("https://xirurgabdukarim.uz/wp-json/wp/v2/listeningmock")
  let posts = await data.json();

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post: post },
  }));
}
---
<ExamLayout title={post.title.rendered}>
  <article class="prose lg:prose-2xl container bg-white min-h-screen mx-auto py-5 px-4">
    <h1 class="font-bold my-3" set:html={post.title.rendered} />
    <Fragment set:html={post.content.rendered} />
  </article>
</ExamLayout>
<script is:inline>
var script=document.createElement("script")
var script2=document.createElement("script")
script2.src="/static/jquery.min.js"
script.src="/static/mock1.js"
document.body.appendChild(script2)
document.body.appendChild(script)
</script>
