---
import { getCollection } from "astro:content";
const allIdeas = await getCollection("part2");
import Layout from '@layouts/Layout.astro'
---

<Layout title="Speaking Part 2">

<section class="bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-white">Speaking Part 2</h2>
          <p class="font-light sm:text-xl text-gray-400">Multilevel Speaking Part 2 idealari.</p>
      </div> 
      <div class="grid gap-8 lg:grid-cols-2">
      {
         allIdeas.map((idea) => (
          <article class="p-4 rounded-lg border shadow-md bg-gray-800 border-gray-700">
              
              <h2 class="mb-2 text-2xl font-bold tracking-tight text-white"><a href={`/speaking/part-2/${idea.slug}/`}>{idea.data.title}</a></h2>
              
              <div class="flex justify-between items-center">
                  
                  <a href={`/speaking/part-2/${idea.slug}/`} class="inline-flex items-center font-medium text-primary-500 hover:underline">
                      Read more
                      <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  </a>
              </div>
          </article> 
           ))}             
      </div>  
  </div>
</section>
</Layout>

