---
const allPosts = await Astro.glob('./reading3/**');
import Layout from '@layouts/Layout.astro'
import SkillHeader from '@components/SkillHeader.astro';

---
<Layout title="Reading Part 3">
<SkillHeader skillTitle="Part 3"/>
<main class="w-full flex flex-col justify-center items-center mt-4">
<article class="text-white flex flex-col justify-center items-center">
    {allPosts.map((post) => <div class="post-card flex py-3 px-2 items-center bg-gray-800 shadow-xl  text-gray-100  border-b border-blue-500">
    <a class="text-lg font-semibold mx-2" href={post.url}>{post.frontmatter.title}
        </a></div>)}
</article>
</main>
<div style="height:50px"></div>
</Layout>
<style>
    .post-card{
        width:400px
    }

    @media screen and (max-width:660px) {
        .post-card{
        width:100%
    }
    }
</style>



   
