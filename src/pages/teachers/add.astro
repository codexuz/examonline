---
import Layout from "@layouts/Layout.astro";
import SkillHeader from "@components/SkillHeader.astro";
---

<Layout title="Apply for teacher">
<SkillHeader skillTitle="Apply for teacher"/>
<main class="w-full min-h-screen mb-6 mt-8">
  <div class="max-w-2xl mx-auto p-4 border bg-gray-900 border-gray-800 p-5 rounded-xl">
    <form action="/api/teacher" method="post">
       <main class="grid grid-cols-1 gap-3 sm:grid-cols-2 p-5">
        <div class="mb-4">
            <label for="name" class="block text-lg font-medium  mb-1 text-gray-400">Full Name</label>
            <input type="text" id="name" name="name" class="w-full px-4 py-2 text-gray-400 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500"  placeholder="Your full name" required>
        </div>
        <div class="mb-4">
            <label for="year" class="text-gray-400 block text-lg font-medium mb-1">Years of experience</label>
            <input type="text" id="year" name="year" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" placeholder="e.g: 6 years">
        </div>
        <div class="mb-4">
            <label for="position" class="text-gray-400 block text-lg font-medium mb-1">Position</label>
            <input type="text" id="position" name="position" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" placeholder="IELTS instructor">
        </div>
        <div class="mb-4">
            <label for="phone" class="text-gray-400 block text-lg font-medium mb-1">Phone number</label>
            <input type="tel" id="phone" name="phone" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" placeholder="+998 (--) --- -- --">
        </div>
        <div class="mb-4">
            <label for="level" class="text-gray-400 block text-lg font-medium mb-1">Current Level</label>
            <input type="text" id="level" name="level" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" placeholder="IELTS: 7.5 or C1" required>
        </div>
        <div class="mb-4">
            <label for="university" class="text-gray-400 block text-lg font-medium mb-1">University & Degree</label>
            <input type="text" id="university" name="university" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" placeholder="e.g: World Languages, bachelor" required>
        </div>
        <div class="mb-4">
    <div>
    <label for="telegram" class="text-gray-400 block text-lg font-medium mb-1">Telegram</label>

    <div class="relative flex items-center mt-2">
        <span class="absolute">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-blue-600  icon icon-tabler icon-tabler-brand-telegram"  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 10l-4 4l6 6l4 -16l-18 7l4 2l2 6l3 -4" /></svg>
        </span>

        <input type="text" name="telegram" id="telegram" placeholder="https://t.me/username" class="block w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500 pl-11 pr-5 rtl:pr-11 rtl:pl-5 ">
    </div>
</div>
        </div>
        <div class="mb-4">
            <div>
    <label for="telegram" class="text-gray-400 block text-lg font-medium mb-1">YouTube</label>

    <div class="relative flex items-center mt-2">
        <span class="absolute">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-red-600 icon icon-tabler icon-tabler-brand-youtube"  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z" /><path d="M10 9l5 3l-5 3z" /></svg>
        </span>

        <input type="text" name="youtube" id="youtube" placeholder="https://youtube.com/@channel" class="block w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500 pl-11 pr-5 rtl:pr-11 rtl:pl-5 ">
    </div>
</div>
        </div>
        </main>
        <div class="mb-4">
            <label for="experience" class="text-gray-400 block text-lg font-medium mb-1">Job Experience</label>
            <textarea name="experience" id="exp" class="w-full px-4 py-2 text-gray-900 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" rows="6"></textarea>
        </div>
        <div class="mb-6">
            <label for="editor" class="text-gray-400 block text-lg font-medium  mb-1">About yourself</label>
            <textarea name="description" id="editor" class="w-full px-4 py-2 text-gray-900 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" rows="6"></textarea>
        </div>

        <div class="flex justify-end">
            <button id="submit" type="submit" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-indigo-600 focus:outline-none">Submit</button>
        </div>
    </form>

</div>


<script>
     let editor;

ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .then( newEditor => {
             editor = newEditor;
            })
            .catch( error => {
                console.error( error );
            });

  ClassicEditor
            .create( document.querySelector( '#exp' ) )
            .catch( error => {
                console.error( error );
            });
    </script>
</main>  
</Layout>