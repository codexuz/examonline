<div class="form">
    <div class="form-title text-gray-50">
     <h1 class="text-2xl font-bold">Sign In</h1>
     <small>Enter your credentials to Sign In.</small>
    </div>

    <form class="form-body rounded-t-2xl" action="/api/auth/signin" method="post">
     <div class="mt-6 mb-1 flex flex-col w-full px-4">
       <label class="text-gray-500 font-thin">Your Email</label>
       <input class="rounded-lg border border-gray-400 bg-white" type="email" required placeholder="yourname@gmail.com" name="email" id="email" />
     </div>

     <div class="mt-3 mb-1 flex flex-col w-full px-4">
       <label class="text-gray-500 font-thin">Password</label>
       <input class="rounded-lg border border-gray-400 bg-white" type="password" required placeholder="******" name="password" id="password" />
     </div>

     <div class="mt-3 mb-1 flex flex-col w-full px-4">
       <button type="submit" class="rounded-2xl bg-blue-600 font-medium text-white py-3 ">Sign In</button>
     </div>
     <div id="loading" class="text-indigo-500 font-normal py-2">Signing in ...</div>
     <div id="error" class="text-rose-500 font-thin py-2">Error</div>
     <div class="text-gray-600 font-thin">
       <span>Don’t have an account?  <a class="text-blue-600 font-bold" href="/register">Sign up</a></span>
     </div>


    </form>
</div>


<style>
   .form{
       width: 100%;
       display: flex;
       justify-content: center;
       flex-direction: column;
   }

   .form-title{
       margin: 30px 40px;
       display: block;
       text-align: left;
   }

   .form-body{
       width: 100%;
       background-color: white;
       position: absolute;
       display: flex;
       flex-direction: column;
       justify-content: flex-start;
       align-items: center;
       height: 82vh;
       left: 0;
       bottom: 0;
   }

  #loading {
    display: none;
  }

  #error {
    display: none;
  }

</style>