---
import { Image } from 'astro:assets';
import Auth from '@assets/login.svg'
---
<section class="bg-gray-900">
  <div class="container flex items-center justify-center min-h-screen px-6 mx-auto">
      <form class="w-full max-w-md">
        <Image src={Auth} alt="Auth"
        class="w-[200px]  h-[auto] sm:hidden mx-auto"
        />

          <h1 class="mt-3 text-2xl font-semibold  capitalize sm:text-3xl text-white">Kirish</h1>
          <p class="text-gray-400"><small>Iltimos, login va parolingizni kiriting</small></p>

          <div class="relative flex items-center mt-8">
              <span class="absolute">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
              </span>

              <input required type="email" class="block w-full py-3  border rounded-lg px-11 bg-gray-900 text-gray-300 border-gray-600  focus:border-blue-300 focus:ring-none focus:outline-none focus:ring focus:ring-opacity-40" placeholder="Email manzil" name="email">
          </div>

          <div class="relative flex items-center mt-4">
              <span class="absolute">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
              </span>

              <input required type="password" class="block w-full px-10 py-3  border rounded-lg bg-gray-900 text-gray-300 border-gray-600  focus:border-blue-300  focus:outline-none focus:ring focus:ring-opacity-40" placeholder="Parol" name="password">
          </div>

          <div class="mt-6">
              <button id="btn" class="flex items-center justify-center w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-600 focus:ring-opacity-50">
                  <div id="loader" class="hidden mx-2 animate-spin inline-block w-5 h-5 border-[3px] border-current border-t-transparent text-white rounded-full" role="status" aria-label="loading">
                  <span class="sr-only">Loading...</span>
                </div>
                  Kirish
              </button>


              <div class="mt-6 text-center ">
                  <a href="/register/index.html" class="text-sm  hover:underline text-blue-400">
                      Akkauntingiz yo'qmi? Ro'yxatdan o'tish
                  </a>
              </div>

              <div class="mt-3 text-center">
                <p id="error" class="hidden text-md font-medium text-red-600">Login yoki parol xato. Iltimos, qaytadan urinib ko'ring!</p>
              </div>

          </div>
      </form>
  </div>
</section>