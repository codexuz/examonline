<div class="max-w-2xl mx-auto p-4 border bg-gray-900 border-gray-800 p-5 rounded-xl">
    <form action="/api/task1" method="post">
        <div class="mb-6">
            <label for="title" class="block text-lg font-medium  mb-1 text-gray-400">Title</label>
            <input type="text" id="title" name="title" class="w-full px-4 py-2 text-gray-400 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500"  placeholder="Enter a lesson title">
        </div>
        <div class="mb-6">
            <label for="date" class="text-gray-400 block text-lg font-medium mb-1">Date</label>
            <input type="date" id="date" name="date" class="w-full px-4 py-2 text-gray-50 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500">
        </div>

        <div class="mb-6">
            <label for="editor" class="text-gray-400 block text-lg font-medium  mb-1">Content</label>
            <textarea name="body" id="editor" class="w-full px-4 py-2 text-gray-900 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" rows="6"></textarea>
        </div>

        <div class="mb-6">
            <label for="video" class="text-gray-400 block text-lg font-medium mb-1">Video Embed</label>
            <textarea name="video" id="video"  class="text-rose-600 w-full px-4 py-2 text-gray-400 border border-slate-800 bg-slate-900 rounded-md focus:outline-none focus:border-indigo-500" rows="3"></textarea>
        </div>

        <div class="flex justify-end">
            <button id="submit" type="submit" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-indigo-600 focus:outline-none">Submit</button>
        </div>
    </form>

</div>


<script>
     let editor;

ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .then( newEditor => {
             editor = newEditor;
            })
            .catch( error => {
                console.error( error );
            });
    </script>