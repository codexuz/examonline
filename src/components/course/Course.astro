---
interface Props{
  title:string;
  level: string;
  duration: string;
  link:string;
  lesson: string;

}

const {title, level, duration, link, lesson} = Astro.props
---
         <div class="w-full">
            <div
               class="mb-10 overflow-hidden duration-300 rounded-lg bg-slate-700 shadow-xl"
               >
               
               <div class="p-8 sm:p-9 md:p-7 xl:p-9">
                  <h3>
                     <a
                        href={link}
                        class="text-white  mb-4 block text-2xl font-semibold sm:text-[22px] md:text-xl lg:text-[22px] xl:text-xl 2xl:text-[22px]"
                        >
                        <h2 class="text-2xl">{title}</h2>
                     </a>
                  </h3>
                  <p
                     class="text-base leading-relaxed mb-7"
                     >
                     <div class="flex mb-2 items-center gap-x-3 text-xl text-white">
                      <lottie-player class="w-9 h-9 p-1 rounded-full bg-gray-800" src='/lotties/bar.json' background="transparent" speed="1"  direction="1" mode="normal" loop autoplay></lottie-player>
                      {level}
                      </div>
                      
                       <div class="flex mb-2 items-center gap-x-3 text-xl text-white">
                      <lottie-player class="w-9 h-9 p-1 rounded-full bg-gray-800" src='/lotties/video.json' background="transparent" speed="1"  direction="1" mode="normal" loop autoplay></lottie-player>
                      Darslar soni: {lesson}
                      </div>

                      <div class="flex mb-2 items-center gap-x-3 text-xl text-white">
                      <lottie-player class="w-9 h-9 p-1 rounded-full bg-gray-800" src='/lotties/docs.json' background="transparent" speed="1"  direction="1" mode="normal" loop autoplay></lottie-player>
                      Kurs Materiallari 
                      </div>

                      <div class="flex mb-2 items-center gap-x-3 text-xl text-white">
                      <lottie-player class="w-9 h-9 p-1 rounded-full bg-gray-800" src='/lotties/time.json' background="transparent" speed="1"  direction="1" mode="normal" loop autoplay></lottie-player>
                      Davomiyligi: {duration}
                      </div>
                  </p>
                  <a
                     href={link}
                     class="w-full text-center inline-block py-2 text-base font-medium transition  rounded-full bg-blue-600  px-7 text-white "
                     >
                  Kursni Boshlash
                  </a>

               </div>
            </div>
         </div>





  </section>



