---
interface Props {
    picture: string, 
    name: string
}

const {picture, name} = Astro.props
---

<div class="user-top-profile w-full bg-blue-600 sticky top-0">
<div class="flex items-center justify-between p-3">

<div class="block text-gray-50">    
<h2 class="text-2xl font-bold">Hey, {name}</h2>
<p class="text-sm font-thin">Let's start practicing</p>
</div>
    <img onclick='window.location.href="/dashboard"' src={picture} class="w-10 h-10 rounded-full bg-white border-2 border-white">
</div>
</div>

<style>
    .user-top-profile{
        height: 100px;
    }
</style>
