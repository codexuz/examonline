---
interface Props {
    picture: string, 
    name: string
}

const {picture, name} = Astro.props
---

<div class="user-top-profile w-full bg-blue-600 sticky top-0 z-10 backdrop-filter backdrop-blur-lg bg-opacity-30 border-b border-blue-200">
<div class="flex items-center justify-between p-3">

<div class="block text-gray-50">    
<h2 class="text-2xl font-bold">Hey, {name}</h2>
<p class="text-sm font-thin">Let's start practicing</p>
</div>
    <img onclick='window.location.href="/dashboard"' src={picture || "https://cdn-icons-png.flaticon.com/512/3177/3177440.png"} class="w-16 h-16 rounded-full bg-white border-2 border-white">
</div>
</div>

<style>
    .user-top-profile{
        height: 100px;
    }
</style>
