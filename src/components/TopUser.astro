---
interface Props {
    name: string
}

const {name} = Astro.props
---

<div class="user-top-profile w-full bg-blue-600">
<div class="flex items-center justify-between p-3">

<div class="block text-gray-50">    
<h2 class="text-2xl font-bold">Hey, {name}</h2>
<p class="text-sm font-thin">Let's start practicing</p>
</div>
<a href="/dashboard">
    <img src="/static/img/avatar.png">
</a>
</div>
</div>

<style>
    .user-top-profile{
        height: 100px;
    }
</style>