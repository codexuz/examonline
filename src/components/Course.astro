---
export interface Props {
    title: string;
    href: string;
    img: string;
    descript:string
}

const { href, title,  img, descript} = Astro.props;
---

      <div class="card1 shadow-xl text-white rounded-lg">
        <img src={img} alt="Course Image">
        <h2 class="font-bold text-xl text-blue-600">{title}</h2>
        <p class="italic text-sm text-gray-400">{descript}</p>
        <a href={href} class="button">Start Course</a>
      </div>  
   
    <style>


/* Course Card Styles */
.card1 {
  width: 300px;
  background-color: #0f172a;  
  border-radius: 5px;
  margin-right: 20px;
  display: inline-block;
  vertical-align: top;
  color: #fff;
}

.card1 img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.card1 h2 {
  font-size: 24px;
  margin: 20px;
}

.card1 p {
  font-size: 16px;
  margin: 20px;
}

.card1 .button {
  display: block;
  width: 80%;
  margin: 20px auto;
  padding: 10px;
  border: none;
  background-color:#2563eb;
  color: #fff;
  font-size: 16px;
  text-align: center;
  text-decoration: none;
  border-radius: 5px;
  transition: all 0.3s ease;
}

.card1 .button:hover {
  background-color: #2980b9;
}



@media only screen and (max-width: 768px) {
  /* Course Card Styles */
  .card1 {
    width: 200px;
    margin-right: 10px;
  }
  
  .card1 img {
    height: 150px;
  }
  
  .card1 h2 {
    font-size: 20px;
    margin: 10px;
  }
  
  .card1 p {
    font-size: 14px;
    margin: 10px;
  }
  
  .card1 .button {
    font-size: 14px;
    margin: 10px auto;
    padding: 8px;
  }
  
}

    </style>
