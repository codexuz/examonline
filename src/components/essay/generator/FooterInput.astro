<div class="h-[80px]"></div>
<main class="w-full bg-slate-800 fixed left-0 bottom-5">
 <div class="w-[90%] mx-auto sm:w-1/2 flex items-center gap-x-2 
 text-white m-0 py-2 px-4 resize-none max-h-[400px] overflow-y-auto
			[&::-webkit-scrollbar]:w-[5px]
			[&::-webkit-scrollbar-track]:rounded-full
			[&::-webkit-scrollbar-thumb]:rounded-full
			[&::-webkit-scrollbar-track]:bg-slate-700
			[&::-webkit-scrollbar-thumb]:bg-slate-500
		    bg-transparent p-2 border rounded-xl border-gray-600 focus:outline-none focus:ring-transparent focus:overflow-none focus:border-gray-600
 ">
        <textarea
            name="question"
            id="prompt-textarea"
            tabindex="0"
            data-id="root"
            rows="1"
            placeholder="Essey savolini kiriting..."
            class="w-full resize-none max-h-[400px] overflow-none
			[&::-webkit-scrollbar]:w-[5px]
			[&::-webkit-scrollbar-track]:rounded-full
			[&::-webkit-scrollbar-thumb]:rounded-full
			[&::-webkit-scrollbar-track]:bg-slate-700
			[&::-webkit-scrollbar-thumb]:bg-slate-500
		    bg-transparent p-2 border-none focus:outline-none focus:ring-transparent focus:overflow-none"
        ></textarea>
        <button disabled id="prompt-btn" class="bg-gray-600 rounded-xl px-3 py-2">
         <svg xmlns="http://www.w3.org/2000/svg" class="text-gray-800 icon icon-tabler icon-tabler-arrow-up" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 5l0 14" /><path d="M18 11l-6 -6" /><path d="M6 11l6 -6" /></svg>
        </button>
    </div>

</main>

<script>

const promptBtn = document.getElementById('prompt-btn')
var textareaContent = document.getElementById('prompt-textarea');
const textarea = document.getElementById('prompt-textarea');



textarea.addEventListener('input', function () {
    this.style.height = 'auto';
    this.style.height = (this.scrollHeight) + 'px';
      
      if (textareaContent.value.trim() === '') {
      promptBtn.disabled = true;
      promptBtn.classList.add('bg-gray-600')
    } else {
      promptBtn.disabled = false;
      promptBtn.classList.remove('bg-gray-600')
      promptBtn.classList.add('bg-white')
    }
});




</script>
